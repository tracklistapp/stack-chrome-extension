{
  "manifest_version": 2,
  "name": "Stack",
  "background": {
    "scripts": ["dist/background.js"],
    "persistent": false
  },
  "homepage_url": "https://tracklistapp.com",
  "description": "This extension automatically detect tracks within a web page",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["dist/main.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "dist/popup/*",
    "test/*"
  ],
  "externally_connectable": {
    "matches": ["http://localhost:8084/*"]
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "background",
    "webNavigation",
    "unlimitedStorage",
    "contextMenus",
    "tabs",
    "storage"
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "Stack",
    "default_popup": "dist/popup/popup.html"
  },
  "icons": {
    "16": "images/icon-bitty.png",
    "48": "images/icon-small.png",
    "128": "images/icon-large.png"
  }
}
